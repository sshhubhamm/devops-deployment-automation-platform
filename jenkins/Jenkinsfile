pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "shuubham/devops-deployment-automation:latest"
        DOCKER_CMD = "\"C:\\Program Files\\Docker\\Docker\\resources\\bin\\docker.exe\""
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/sshhubhamm/devops-deployment-automation-platform.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '%DOCKER_CMD% build -t %DOCKER_IMAGE% -f docker/Dockerfile .'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    bat 'echo %DOCKER_PASS% | %DOCKER_CMD% login -u %DOCKER_USER% --password-stdin'
                }
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                bat '%DOCKER_CMD% push %DOCKER_IMAGE%'
            }
        }
    }
}
